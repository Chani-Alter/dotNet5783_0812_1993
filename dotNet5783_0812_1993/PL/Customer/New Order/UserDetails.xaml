<UserControl x:Class="PL.Customer.UserDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PL.Customer"
             mc:Ignorable="d" 
             DataContext="{Binding  RelativeSource={RelativeSource Mode=Self} }"       
 
    d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label Content="Name" FontSize="20" HorizontalAlignment="Left" Height="43" Margin="127,80,0,0" VerticalAlignment="Top" Width="71"/>
        <TextBox Name="NameTxt" Text="{Binding CustomerName}" HorizontalAlignment="Left" Height="42" Margin="246,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="191"/>

        <Label Content="Email" FontSize="20" HorizontalAlignment="Left" Height="43" Margin="127,148,0,0" VerticalAlignment="Top" Width="71"/>
        <TextBox Name="EmailTxt" Text="{Binding Email}" HorizontalAlignment="Left" Height="42" Margin="246,149,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="191"/>

        <Label Content="Address" FontSize="20" HorizontalAlignment="Left" Height="43" Margin="127,217,0,0" VerticalAlignment="Top" Width="85"/>
        <TextBox Name="AddressTxt" Text="{Binding Adress}" HorizontalAlignment="Left" Height="42" Margin="246,218,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="191"/>

        <Button Content="save order" Name="saveBtn" HorizontalAlignment="Left" Height="30" Margin="299,319,0,0" VerticalAlignment="Top" Width="111" Click="saveBtn_Click">
            <Button.IsEnabled>
                <MultiBinding  Converter="{StaticResource textBoxFullToTrue}">
                    <Binding ElementName="AddressTxt" Path="Text" />
                    <Binding ElementName="EmailTxt" Path="Text" />
                    <Binding ElementName="NameTxt" Path="Text" />
                </MultiBinding>
            </Button.IsEnabled>
        </Button>
    </Grid>
</UserControl>
