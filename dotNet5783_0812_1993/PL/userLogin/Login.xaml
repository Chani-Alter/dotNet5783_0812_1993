<Window x:Class="PL.userLogin.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.userLogin"
        mc:Ignorable="d"
        DataContext="{Binding  RelativeSource={RelativeSource Mode=Self} }"        
        Title="Login" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label  Content="customer email:"></Label>
        <TextBox  Grid.Column="1" Text="{Binding CustomerEmail}"></TextBox>
        <Label Grid.Row="1" Content="password:"></Label>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Password}"></TextBox>
        <Button Grid.Row="2" Content="log in" Click="logIn_Click" ></Button>
        <Button Grid.Row="2" Grid.Column="1" Content="sign up" Click="signUp_Click" ></Button>

    </Grid>
</Window>
