<Window x:Class="PL.Manager.ManagerMenue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Manager"
        mc:Ignorable="d"
        Title="ManagerMenue" Height="768" Width="1366">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Manager/background2.jpg"/>
        </Grid.Background>
        <Button Name="showProductBtn" FontSize="30" Cursor="Hand" FontWeight="Bold" Content="show products" Background="#FF1E3D59" Margin="275,24,230,39" Click="showProductBtn_Click" BorderBrush="#FF1E3D59" Width="295" Height="135"/>
        <Button Name="showOrdersBtn" FontSize="30" Cursor="Hand" FontWeight="Bold" Content="show orders" Background="#FF1E3D59"  Margin="275,97,230,0" VerticalAlignment="Top"  Height="135" Click="showOrdersBtn_Click" BorderBrush="#FF1E3D59" Width="295"/>

    </Grid>
</Window>
